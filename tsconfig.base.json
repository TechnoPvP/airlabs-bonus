{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "strict": true,
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@airlabs-bonus/bonus-calculator": ["libs/bonus-calculator/src/index.ts"],
      "@airlabs-bonus/calculator-logic": ["libs/calculator-logic/src/index.ts"],
      "@airlabs-bonus/data-access": ["libs/data-access/src/index.ts"],
      "@airlabs-bonus/data-converter": ["libs/data-converter/src/index.ts"],
      "@airlabs-bonus/per-diem-calculator": ["libs/per-diem-calculator/src/index.ts"],
      "@airlabs-bonus/types": ["libs/types/src/index.ts"],
      "@airlabs-bonus/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
